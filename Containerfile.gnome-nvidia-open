# PureBlue OS GNOME - NVIDIA Open
# Base NVIDIA Open image with GNOME Desktop Environment

ARG REGISTRY

FROM ${REGISTRY}/base-nvidia-open:latest

# Install GNOME Desktop Environment
RUN dnf5 install -y \
    @workstation-product-environment \
    && dnf5 clean all

# Enable GDM (GNOME Display Manager) for graphical login
RUN systemctl enable gdm.service
